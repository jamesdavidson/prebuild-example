<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net10.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Clojure" Version="1.12.3-alpha4" />
    <PackageReference Include="Parquet.Net" Version="5.3.0" />
  </ItemGroup>
  <Target Name="BundleDeps" BeforeTargets="Build" Inputs="deps.edn" Outputs="$(TargetDir)ClojureDepsBundle.dll">
    <Exec Command="cljr -Sforce -A:prebuild --main bundle $(TargetDir)ClojureDepsBundle.dll" />
  </Target>
</Project>
